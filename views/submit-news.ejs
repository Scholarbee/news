<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit Your Story Or News</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Share your amazing stories and news with millions of people accross the world. Fill out the form to get started.</p>
  </div>
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/submit-news" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

        <div class="col-12">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email" class="form-control">
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Title of Story/News</label>
          <input type="text" name="name" id="name" class="form-control" required>
        </div>
        
        <div class="col-12">
          <label for="description" class="form-label">Details/Body</label>
          <textarea name="description" id="ta" class="form-control" cols="30" rows="15"></textarea>
        </div>


        <div class="col-12">
          <label for="name" class="form-label">Writer/Reporter</label><br>
          <small>Example: Ike</small>
          <div class="ingredientList">
            <div class="ingredeintDiv mb-1">
              <input type="text" name="ingredients" class="form-control">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Writer/Reporter</button>
        </div>

        <div class="col-12">
          <label for="category">Select Category</label>
          <select class="form-select form-control" name="category" aria-label="Category">
            <option selected>Select Category</option>
            <option value="Education">Education News</option>
            <option value="Entertainment">Entertainment News</option>
            <option value="Health">Health News</option>
            <option value="Sport">Sport News</option>
            <option value="Story">Story</option>
            <option value="Others">Others</option>
          </select>
        </div>

        <div class="col-12">
          <label for="image">Cover Image</label>
          <input type="file" class="form-control" name="image" accept="image/*">
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Publish Write-up</button>
        </div>

      </div>
    
    </form>

  </div>
</div>