<% if(news != null ) { %>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- news.name %></li>
    </ol>
  </nav>


  <div class="row">

    <div class="col-12 col-md-4">
      <img src="/uploads/<%- news.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- news.name %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
      <div class="row">
        <h4>Title</h4>
        <div class="col-12"><h1><%- news.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- news.category %></div>
        <div class="col-12" style="white-space: pre-line;">
          <h4>Body</h4>
          <%- news.content %>
        </div>
      </div>

      <div class="row pt-4">
        <div class="col-12">
          <h4>Writers/Reporters</h4>
          <ul class="list-group list-group-flush">
            <% news.writer.forEach(function(writers, index){ %>
              <li class="list-group-item"><%= writers %></li>
            <% }) %>
          </ul> 
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <p>No item found.</p>
<% } %>